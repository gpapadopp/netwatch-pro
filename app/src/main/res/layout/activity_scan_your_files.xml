<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanYourFiles"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:minHeight="?android:attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:titleTextColor="@android:color/white"
            android:background="@color/main_blue">

            <!-- layout_badge.xml -->
            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start">

                <ImageView
                    android:id="@+id/custom_toolbar_settings_icon"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:src="@drawable/back_arrow_white"
                    android:layout_marginRight="10dp"
                    android:contentDescription="Back Icon" />

            </FrameLayout>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/scan_your_files"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18dp"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Progress Loader -->
        <FrameLayout
            android:id="@+id/activity_scan_your_files_protection_row"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/main_activity_vertical_gradient">
            <RelativeLayout
                android:id="@+id/progress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:scaleX="2"
                    android:scaleY="2"
                    app:lottie_rawRes="@raw/platonic_loader"
                    app:lottie_ignoreDisabledSystemAnimations="true"
                    app:lottie_renderMode="hardware"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
                <TextView
                    android:id="@+id/activity_scan_your_files_current_scanning_file_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/animationView"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:text="/users/"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="13dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/poppins_medium"/>
            </RelativeLayout>
        </FrameLayout>

        <!-- Progress Bar -->
        <FrameLayout
            android:id="@+id/activity_scan_your_files_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_scan_your_files_protection_row"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ProgressBar
                    android:id="@+id/activity_scan_your_files_simple_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/horizontal_progress_bar_style"
                    android:max="100"
                    android:min="0"
                    android:progress="25"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                <TextView
                    android:id="@+id/activity_scan_your_files_progress_bar_percent_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_scan_your_files_simple_progress_bar"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:text="25%"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/poppins_medium"/>
            </RelativeLayout>
        </FrameLayout>

        <!-- Scanned Files Row -->
        <FrameLayout
            android:id="@+id/scanned_files_row_text_view_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/activity_scan_your_files_progress_bar"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/activity_scan_your_files_scanned_files_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:text="@string/scanned_files"
                    android:textSize="15dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:id="@+id/activity_scan_your_files_scanned_files_counter_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:text="124"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Scanned Time Elapsed Row -->
        <FrameLayout
            android:id="@+id/scanned_files_time_elapsed_row_text_view_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/scanned_files_row_text_view_row"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/activity_scan_your_files_time_elapsed_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:text="@string/time_elapsed"
                    android:textSize="15dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:id="@+id/activity_scan_your_files_time_elapsed_timer_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:text="00:24:00"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Scanned Files ListView Row -->
        <FrameLayout
            android:id="@+id/scanned_files_list_view_container_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/scanned_files_time_elapsed_row_text_view_row"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:id="@+id/scanned_files_container_relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                android:layout_weight="5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/scanned_files_container_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">
                    <RelativeLayout
                        android:id="@+id/scanned_files_container_card_view_relative_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/scanned_files_container_card_view_last_scans_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:gravity="start"
                            android:paddingTop="10dp"
                            android:paddingStart="15dp"
                            android:text="@string/malicious_scanned_files"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="18dp"/>
                        <ListView
                            android:id="@+id/scanned_files_container_card_view_last_scans_list_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:layout_below="@+id/scanned_files_container_card_view_last_scans_textview"/>
                        <View
                            android:id="@+id/scanned_files_container_card_view_last_scans_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/scanned_files_container_card_view_last_scans_list_view"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@color/light_gray" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </FrameLayout>

    </RelativeLayout>

</ScrollView>