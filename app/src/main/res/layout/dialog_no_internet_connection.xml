<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/dialog_no_internet_connection_job_title_row"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/dialog_no_internet_connection_rounded_title">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/connectivity"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/white"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/dialog_no_internet_connection_job_last_value_row"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dialog_no_internet_connection_job_title_row">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/dialog_no_internet_connection_job_hint_textview"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/you_are_not_connected_to_the_internet"
                android:fontFamily="@font/poppins"
                android:textSize="14dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="top"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textColor="@color/black"/>
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/dialog_no_internet_connection_job_buttons_row"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/dialog_no_internet_connection_job_last_value_row">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/dialog_no_internet_connection_job_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="@string/ok_txt"
                android:fontFamily="@font/poppins_bold"
                android:backgroundTint="@color/primary_green"/>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>