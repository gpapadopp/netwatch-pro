<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/scanned_apps_single_list_item_app_image_view"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:elevation="10dp"
            android:layout_margin="5dp"
            android:src="@drawable/search_white"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/scanned_apps_single_list_item_application_name_text_view"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Application Name"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/scanned_apps_single_list_item_loading_animation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:src="@drawable/spinner_loading"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/scanned_apps_single_list_item_app_is_save_text_view"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1"
            android:text="@string/safe"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/primary_green"/>

        <TextView
            android:id="@+id/scanned_apps_single_list_item_app_warning_text_view"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/warning"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/main_orange"/>

    </LinearLayout>

</RelativeLayout>