<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            app:cardCornerRadius="16dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/scanned_apps_single_list_item_app_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/search_white"
                android:background="@color/black"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/scanned_apps_single_list_item_application_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Application Name"
            android:paddingStart="10dp"
            android:fontFamily="@font/poppins" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/scanned_apps_single_list_item_loading_animation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/spinner_loading" />

    </LinearLayout>

</RelativeLayout>